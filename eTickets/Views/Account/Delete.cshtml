@model ApplicationUser

@{
    ViewData["Title"] = "Delete User";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Delete User</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label class="control-label">Roles</label>
                    <input value="@string.Join(", ", ViewBag.Roles ?? new string[0])" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm Delete" class="btn btn-danger float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Users">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 